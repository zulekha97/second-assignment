<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp" android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="75dp"
        android:layout_width="75dp"
        android:contentDescription="@string/contact_profile_picture_descriptor"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/contact_name"
        android:id="@+id/imageView" app:srcCompat="@drawable/contact"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/contact_name"
        android:layout_alignLeft="@+id/contact_name"
        android:id="@+id/contact_last_name"
        android:layout_below="@+id/contact_name"
        android:layout_marginTop="19dp"
        android:textSize="18sp"
        android:textStyle="bold" tools:text="Smith"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/textViewPhoneNumber"
        android:layout_alignLeft="@+id/textViewPhoneNumber"
        android:id="@+id/contact_name"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:textStyle="bold" tools:text="Sam"
        android:layout_alignParentTop="true"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewEmail"
        tools:text="Contact Email Field"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_above="@+id/textView4"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="24dp"
        android:text="@string/hint_phone_number"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:id="@+id/textView3"
        android:layout_below="@+id/contact_last_name"
        android:layout_marginTop="46dp"
        android:text="@string/hint_email"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
     android:layout_alignStart="@+id/textViewEmail"
        android:layout_alignLeft="@+id/textViewEmail"
        android:id="@+id/textViewPhoneNumber"
        tools:text="Contact Phone Number Field"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignBaseline="@+id/textView4"/>

</RelativeLayout>